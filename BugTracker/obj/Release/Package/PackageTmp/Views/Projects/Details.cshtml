@model BugTracker.Models.Project

@{
    ViewBag.Title = "Details";
}

<p>
<h2>Project Details</h2>
<h4>Number of Tickets For @Model.Name: </h4> <h4 style="color:orange; font-size:18px">@Model.Tickets.Count tickets</h4>
<p>




<div class="row, headings">
    <div>
        @foreach (var item in Model.Tickets)
        {
            <dl class="dl-horizontal, col-md-3" style="border-bottom:1px solid yellowgreen; border-top:1px solid yellowgreen; border-left:1px solid yellowgreen; border-right:1px solid yellowgreen">
                <dt>
                    Owner Name
                </dt>

                <dd>
                    @Html.DisplayFor(modelItem => item.OwnerUser.DisplayName)
                </dd>

                <dt>
                    Project
                </dt>

                <dd>
                    @Html.DisplayFor(modelItem => item.Project.Name)

                </dd>

                <dt>
                    Priority
                </dt>

                <dd>
                    @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                </dd>

                <dt>
                    Status
                </dt>

                <dd>
                    @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                </dd>

                <dt>
                    Ticket Type
                </dt>

                <dd>
                    @Html.DisplayFor(modelItem => item.TicketType.Name)
                </dd>

                <dt>
                    Title
                </dt>

                <dd>
                    @Html.DisplayFor(modelItem => item.Title)
                </dd>

                <dt>
                    Description
                </dt>

                <dd>
                    @Html.DisplayFor(modelItem => item.Description)
                </dd>

                <dt>
                    Created
                </dt>

                <dd>
                    @Html.DisplayFor(modelItem => item.Created)
                </dd>

                <dt>
                    Updated
                </dt>
                <dd>
                    @Html.DisplayFor(modelItem => item.Updated)
                </dd>
            </dl>
        }
    </div>

</div>
<div class="row">
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</div>
